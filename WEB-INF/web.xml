<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>

	<servlet>
		<servlet-name>a1</servlet-name>
		<servlet-class>controllers.SignUpServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>a1</servlet-name>
		<url-pattern>/signup.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>a2</servlet-name>
		<servlet-class>controllers.SignInServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>a2</servlet-name>
		<url-pattern>/signin.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>a3</servlet-name>
		<servlet-class>controllers.ActivateUser</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>a3</servlet-name>
		<url-pattern>/activateuser.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>a4</servlet-name>
		<servlet-class>controllers.UniqueEmailServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>a4</servlet-name>
		<url-pattern>/uniqueemail.do</url-pattern>
	</servlet-mapping>

</web-app>
